<%- include("header") -%>

<% posts.forEach(function(post){ %>
  <h1><a href= "posts/<%= post.title %>"><%= post.title %></a></h1>
<% if(post.post.length > 100){ %>
<p><%= post.post.substring(0,100) + "..." %> <a href= "posts/<%= post.title %>">Read More</a></p>
<% }else{ %>
<p><%= post.post %> <a href= "posts/<%= post.title %>"></a></p>
<% } %>
<% }) %>

<a href="/compose"><button type="button" name="button">Compose</button></a>
<%- include("footer") -%>
